{
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "go"
            ]
        }
    },
    "python.jediEnabled": false,
    // Linting won't work without this:
    "python.linting.pylintEnabled": true,
    "python.formatting.provider": "black",
    "diagnostic.virtualText": true
}
